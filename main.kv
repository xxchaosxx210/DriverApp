<LoginTextField@MDTextField>:
    multiline: False
    mode: "rectangle"

<LoginMDscreen>:
    name: "login"
    
    MDGridLayout:
        cols: 1
        size_hint: None, None
        size: ("300dp", "100dp")
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: "10dp"
        
        LoginTextField:
            hint_text: "Username"
            id: id_username
            text: ""
            
        LoginTextField:
            hint_text: "Password"
            id: id_password
            password: True
            text: ""
            
        MDFillRoundFlatButton:
            pos_hint: {"center_x": .5}
            size_hint_x: .3
            text: "Login"
            on_release: root.on_login()
    
ScreenManager:
    id: screen_manager
    
    LoginMDscreen:
        id: login_screen
    
    MDScreen:
        name: "main"
        on_enter: bottom_nav._refresh_tabs()
        
        MDBoxLayout:
            orientation: "vertical"
            
            MDToolbar:
                title: "Taxi Company"
                left_action_items: [['account', lambda x: x], ['settings-outline', lambda x: x]]
                
            MDBottomNavigation:
                id: bottom_nav
            
                MDBottomNavigationItem:
                    name: "status"
                    text: "Status"
                    icon: "account"
                    
                MDBottomNavigationItem:
                    name: "zones"
                    text: "Zones"
                    icon: "scatter-plot-outline"
                
                MDBottomNavigationItem:
                    name: "map"
                    text: "Map"
                    icon: "map"